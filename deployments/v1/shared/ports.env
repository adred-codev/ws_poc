# =============================================================================
# Standard Port Mappings
# =============================================================================
# Purpose: Consistent port configuration across all deployments
# Used by: Docker Compose, Prometheus, Grafana, documentation

# =============================================================================
# INTERNAL PORTS (Container-side)
# =============================================================================
# WebSocket Server
WS_SERVER_INTERNAL_PORT=3002

# Kafka/Redpanda
KAFKA_INTERNAL_PORT=9092
KAFKA_SCHEMA_REGISTRY_PORT=8081
KAFKA_HTTP_PROXY_PORT=8082
KAFKA_ADMIN_PORT=9644

# Monitoring
PROMETHEUS_INTERNAL_PORT=9090
GRAFANA_INTERNAL_PORT=3000
LOKI_INTERNAL_PORT=3100

# Publisher
PUBLISHER_INTERNAL_PORT=3003

# Redpanda Console
REDPANDA_CONSOLE_PORT=8080

# =============================================================================
# EXTERNAL PORTS (Host-side) - Local Development
# =============================================================================
# These are the default external ports for local deployment
# Override in docker-compose.yml for environment-specific mappings
WS_SERVER_EXTERNAL_PORT_LOCAL=3005
KAFKA_EXTERNAL_PORT_LOCAL=19092
PROMETHEUS_EXTERNAL_PORT_LOCAL=9092
GRAFANA_EXTERNAL_PORT_LOCAL=3011
LOKI_EXTERNAL_PORT_LOCAL=3102
PUBLISHER_EXTERNAL_PORT_LOCAL=3006

# =============================================================================
# EXTERNAL PORTS - GCP Production
# =============================================================================
WS_SERVER_EXTERNAL_PORT_GCP=3004
GRAFANA_EXTERNAL_PORT_GCP=3010
PROMETHEUS_EXTERNAL_PORT_GCP=9091
