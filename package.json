{
  "name": "odin-websocket-poc",
  "version": "1.0.0",
  "description": "WebSocket PoC with NATS pub/sub to replace polling mechanism",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "load-test": "tsx src/load-test.ts",
    "load-test:quick": "tsx src/load-test.ts quick",
    "load-test:medium": "tsx src/load-test.ts medium",
    "load-test:stress": "tsx src/load-test.ts stress",
    "load-test:progressive": "tsx src/load-test.ts progressive",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "websocket",
    "nats",
    "real-time",
    "pubsub",
    "odin"
  ],
  "author": "Odin Development Team",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "nats": "^2.19.0",
    "pidusage": "^4.0.1",
    "systeminformation": "^5.27.10",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.5.2",
    "@types/pidusage": "^2.0.5",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  }
}
