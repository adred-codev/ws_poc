{
  "server": {
    "host": "0.0.0.0",
    "port": 3002,
    "readTimeout": 10,
    "writeTimeout": 10,
    "maxMessageSize": 1024
  },
  "websocket": {
    "checkOrigin": true,
    "enableCompression": true,
    "readBufferSize": 4096,
    "writeBufferSize": 4096,
    "handshakeTimeout": 10
  },
  "nats": {
    "url": "nats://localhost:4222",
    "maxReconnects": 10,
    "reconnectWait": 1000,
    "reconnectJitter": 200,
    "maxPingsOut": 3,
    "pingInterval": 10000
  },
  "auth": {
    "jwtSecret": "your-super-secret-jwt-key-change-in-production",
    "tokenExpiration": 3600,
    "requireAuth": false
  },
  "metrics": {
    "enablePrometheus": true,
    "metricsPath": "/metrics",
    "updateInterval": 1
  }
}